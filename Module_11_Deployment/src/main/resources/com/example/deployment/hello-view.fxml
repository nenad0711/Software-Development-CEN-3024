<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.deployment.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label prefHeight="24.0" prefWidth="249.0" text="Enter a number to check whether it's prime:" />
    <TextField fx:id="numberTextField" />
    <Button onAction="#onCheckButtonClicked" text="Check" />
    <TextArea fx:id="answer" prefHeight="200.0" prefWidth="200.0" />

</VBox>
